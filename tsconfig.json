{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "dom"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "./*.d.ts" 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}